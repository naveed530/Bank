@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateService</title>

    <link rel="stylesheet" href="~/Content/layout.css" type="text/css" media="screen" />
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" />
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.5.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/hideshow.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.tablesorter.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery.equalHeight.js"></script>
</head>
<body>
    <div>
        <div class="col-lg-4">

            <table class="table" style="border:solid">
                <thead>
                    <tr class="btn-primary" style="text-align:center">
                        <th>Update</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Image</th>
                    </tr>
                </thead>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td><a href="~/AdminControl/EditService/@obj.Id">Update</a></td>
                        <td>@obj.name</td>
                        <td>@obj.description</td>
                        <td><img src="/ServiceFiles/@obj.picture" height="50" width="50"/></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
