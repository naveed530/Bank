@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateAccount</title>

    <link rel="stylesheet" href="~/Content/layout.css" type="text/css" media="screen" />
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" />
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.5.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/hideshow.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.tablesorter.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery.equalHeight.js"></script>

</head>
<body>
    <div>
        
        <div class="col-lg-6" style="margin-top:30px; margin-left:300px; background-color:aqua; width:500px; height:500px; border-radius:10px;">
            <div class="container" style="font-family:Calibri ; color:blue; margin-top:20px; margin-left:90px;">
                <div class="row">
                    <div class="col-md-offset-0 col-md-3">
                        <div class="form-login">
                            
                            <form method="post" action="/AdminControl/Create" style="opacity:0.9">
                                <input type="text" style="opacity:0.9" name="name" class="form-control input-sm chat-input" placeholder="Name" required="required" />
                                <br />

                                <input type="text" style="opacity:0.9" name="address" class="form-control input-sm chat-input" placeholder="Address" required="required" />
                                <br />

                                <input type="text" style="opacity:0.9" name="phoneNo" class="form-control input-sm chat-input" placeholder="Phone Number" required="required" />
                                <br />

                                <input type="number" style="opacity:0.9" name="userId" class="form-control input-sm chat-input" placeholder="User ID" required="required" />
                                <br />

                                <input type="number" style="opacity:0.9" name="amount" class="form-control input-sm chat-input" placeholder="Amount" required="required" />
                                <br />

                                <label>Type:</label><br />
                                <label>Current </label><input type="radio" name="accountType" value="current" />
                                <label>Saving </label><input type="radio" name="accountType" value="saving" />
                                <br />
                                <br />

                                <button type="submit" class="btn btn-success">Create</button>
                            </form>

                            <h3>@ViewBag.Message</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
