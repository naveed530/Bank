<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/themes/base/images/bank.jpg" rel="shortcut icon" type="image/x-icon" />
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.5.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/hideshow.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.tablesorter.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery.equalHeight.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".tablesorter").tablesorter();
        }
        );
        $(document).ready(function () {

            //When page loads...
            $(".tab_content").hide(); //Hide all content
            $("ul.tabs li:first").addClass("active").show(); //Activate first tab
            $(".tab_content:first").show(); //Show first tab content

            //On Click Event
            $("ul.tabs li").click(function () {

                $("ul.tabs li").removeClass("active"); //Remove any "active" class
                $(this).addClass("active"); //Add "active" class to selected tab
                $(".tab_content").hide(); //Hide all tab content

                var activeTab = $(this).find("a").attr("href"); //Find the href attribute value to identify the active tab + content
                $(activeTab).fadeIn(); //Fade in the active ID content
                return false;
            });

        });
    </script>
    <script type="text/javascript">
        $(function () {
            $('.column').equalHeight();
        });
    </script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <header id="header">
            <hgroup>
                <h1 class="site_title">@Html.ActionLink("Admin Panal", "Index", "AdminControl")</h1>
                <h2 class="section_title">Dashboard</h2>
                <div class="btn btn-success" style="margin-top:10px; text-decoration-color:white;">@Html.ActionLink("View Site", "Index", "Home")</div>
            </hgroup>
        </header> <!-- end of header bar -->

        <aside id="sidebar" class="column">
            <form class="quick_search">
                <input type="text" value="Quick Search" onfocus="if(!this._haschanged){this.value=''};this._haschanged=true;">
            </form>
            <hr />
            <h3>Users</h3>
            <ul class="toggle">
                <li class="icn_categories">@Html.ActionLink("Search Users", "SearchUsers", "AdminControl")</li>
                <li class="icn_new_article">@Html.ActionLink("Add User", "AddUser", "AdminControl")</li>
                <li class="icn_edit_article">@Html.ActionLink("Edit User Details", "EditUser", "AdminControl")</li>
                <li class="icn_categories">@Html.ActionLink("Remove User", "RemoveUser", "AdminControl")</li>
                <li class="icn_categories">@Html.ActionLink("Create Account", "CreateAccount", "AdminControl")</li>
                <li class="icn_categories">@Html.ActionLink("Edit Account Details", "EditAccount", "AdminControl")</li>
                <li class="icn_categories">@Html.ActionLink("Remove Account", "RemoveAccount", "AdminControl")</li>
                <li class="icn_new_article">@Html.ActionLink("Deposit", "Deposit", "AdminControl")</li>
            </ul>
            <h3>Services</h3>
            <ul class="toggle">
                <li class="icn_add_user">@Html.ActionLink("Add Service", "AddService", "AdminControl")</li>
                <li class="icn_profile">@Html.ActionLink("Update Service", "UpdateService", "AdminControl")</li>
                <li class="icn_view_users">@Html.ActionLink("Remove Service", "RemoveService", "AdminControl")</li>
            </ul>
            <h3>Posts</h3>
            <ul class="toggle">
                <li class="icn_view_users">@Html.ActionLink("Remove Posts", "RemovePost", "AdminControl")</li>
            </ul>
            <h3>Managers</h3>
            <ul class="toggle">
                <li class="icn_view_users">@Html.ActionLink("Add Manager", "AddNewManager", "AdminControl")</li>
                <li class="icn_view_users">@Html.ActionLink("Remove Manager", "RemoveManager", "AdminControl")</li>
                <li class="icn_view_users">@Html.ActionLink("Edit Manager Info", "EditManagerInfo", "AdminControl")</li>
                <li class="icn_view_users">@Html.ActionLink("Logout", "Logout", "AdminControl")</li>
            </ul>

            <footer>
                <hr />
                <p><strong>Copyright &copy; 2011 Website Admin</strong></p>
                <p>Theme by <a href="#">MediaLoot</a></p>
            </footer>
        </aside><!-- end of sidebar -->

        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
    </html>


