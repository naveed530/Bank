
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <link href="~/Content/themes/base/images/bank.jpg" rel="shortcut icon" type="image/x-icon" />
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="margin-top:10px;">
        <!-- Logo -->
        <header style="margin-right:2%;">
            <div align="center">
                <img src="~/Content/themes/base/images/bank.jpg" alt="Cinque Terre" width="300" height="50">
                <p style="font-size:30px; margin-top:5px; margin-bottom:5px;">Your Personal Home Bank</p>
            </div>
            <div>
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid" style="margin-left:20px;">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("UBL(Your Personal Home Bank)", "Index", "Home")</li>
                            </ul>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li style="font-size:medium;">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li style="font-size:medium;">@Html.ActionLink("Services", "Services", "Home")</li>
                                <li style="font-size:medium;">@Html.ActionLink("Users", "Users", "Home")</li>
                                <li style="font-size:medium;">@Html.ActionLink("About Us", "About", "Home")</li>
                                <li style="font-size:medium;">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                
                                @if (Session["user"] == null)
                                    {
                                        <li style="font-size:medium;">@Html.ActionLink("SingUp/SignIn", "Forms", "Home")</li>
                                    }
                                    else
                                    {
                                        <li style="font-size:medium;">@Html.ActionLink("My Profile", "gotoProfile", "Home")</li>
                                        <li style="font-size:medium;">@Html.ActionLink("Logout", "Logout", "Home")</li>
                                    }
                                <!--
                                                                <li><a href="/Home">Home</a></li>
                                                                <li><a href="/Home/Services">Services</a></li>
                                                                <li><a href="/Home/Users">Users</a></li>
                                                                <li><a href="/Home/About">About Us</a></li>
                                                                <li><a href="/Home/Contact">Contact Us</a></li>
                                                                <li><a href="/Home/SignUp">Sign-up</a></li>
                                                                <li><a href="/Home/SignIn">Sign-in</a></li>-->
                            </ul>
                            <!--<form class="navbar-form navbar-right" role="search">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                </div>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </form> -->
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
        </header>
    </div>
    <section style="height:950px;">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </section>
    <footer>
        <p>© 2012 <a href="#" class="link">Security Group</a> Website Template by <a target="_blank" href="http://www.templatemonster.com/" class="link">TemplateMonster.com</a></p>
        <p>Phone: +1 800 559 6580 &nbsp; Email: <a href="#" class="link">info@security.com</a></p>
    </footer>
</body>
</html>
