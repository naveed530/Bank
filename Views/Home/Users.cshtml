@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model System.Collections.ArrayList
@using Web_Practice5_Template.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <!--<link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/ind_style.css" rel="stylesheet" /> -->
    <script src="~/Scripts/jquery-1.7.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.easing.1.3.js" type="text/javascript"></script>

    <style>
        #block1, #block2, #block3 {
            background-color: aliceblue;
            width: 887px;
            height: 260px;
            margin-top: 20px;
            margin-left: 15%;
            margin-right: 25%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div>
        <div class="header-content">
            <div class="wrap main">
                @foreach(Post p in Model)
                {
                    <img style="margin-top: 8px; border-radius: 10px;" src="/PostFiles/@p.picture" alt="" class="img-radius" height="120" width="170" />
                    <div class="border-1">
                        <h3><span class="label label-success">@p.title</span></h3>
                        <p>@p.description</p>
                        <a class="btn btn-info" href="~/Home/DisplayPost/@p.Id">Read More</a>
                    </div>
                }
              </div>
         </div>
    </div>
</body>
</html>
