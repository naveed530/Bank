@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeMyInfo</title>

    <link href="dropDown.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/showHide.js" type="text/javascript"></script>

</head>
<body>
    <div>
        <div class="col-lg-6" style="margin-top:30px; margin-left:300px; background-color:aqua; width:500px; height:470px; border-radius:10px;">
            <div class="container" style="font-family:Calibri ; color:blue; margin-top:20px; margin-left:90px;">
                <div class="row">
                    <div class="col-md-offset-0 col-md-3">
                        <div class="form-login">

                            <form method="post" action="/Home/SaveProfileInfo" style="opacity:0.9" enctype="multipart/form-data">

                                <input type="hidden" name="Id" value="@Model.Id" />

                                First Name<input type="text" style="opacity:0.9" name="fname" class="form-control input-sm chat-input" placeholder="Title" value="@Model.fname" />
                                <br />

                                Last Name<input type="text" style="opacity:0.9" name="lname" class="form-control input-sm chat-input" placeholder="Title" value="@Model.lname" />
                                <br />

                                Password<input type="text" style="opacity:0.9" name="password" class="form-control input-sm chat-input" placeholder="Title" value="@Model.password" />
                                <br />

                                <img src="~/ProfileImages/@Model.profile" width="100" height="100" style="border-radius:10px;"/>
                                <br />

                                <label>Change Picture</label>
                                <input type="file" name="picture" />
                                <br />
                                <br />

                                <input class="btn btn-primary" type="submit" value="POST" />
                            </form>

                            <h3>@ViewBag.Message</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
