@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />   

</head>
<body>
    <div>
        <div class="col-lg-6" style="margin-top:30px; margin-left:450px; background-color:aqua; width:400px; height:450px; border-radius:10px;">
            <div class="container" style="font-family:Calibri ; color:blue; margin-top:20px; margin-left:30px;">
                <div class="row">
                    <div class="col-md-offset-0 col-md-3">
                        <div class="form-login">

                            <form method="post" action="/Home/ContactUs" style="opacity:0.9">
                                <input type="email" style="opacity:0.9" name="email" class="form-control input-sm chat-input" placeholder="Your Email" required="required" />
                                <br />
                                
                                <input type="text" name="subject" class="form-control input-sm chat-input" placeholder="Subject"/>
                                <br />

                                <textarea name="message" class="form-control input-sm chat-input" placeholder="Type Message Here"></textarea>
                                <br />

                                <label>Attach File</label>
                                <input type="file" name="file" />
                                <br />

                                <input class="btn btn-primary" type="submit" value="Send" />
                                <h3>@ViewBag.Done</h3>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>  
    </div>
</body>
</html>
