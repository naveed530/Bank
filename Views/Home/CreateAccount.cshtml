                                <label>Saving </label><input type="radio" name="accountType" value="saving" />
                                <br />
                                <br />

                                <button type="submit" class="btn btn-success">Create</button>
                            </form>

                            <h3>@ViewBag.Message</h3>
                        </div>

                    </div>
                </div>
            </div>
